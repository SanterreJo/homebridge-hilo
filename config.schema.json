{
	"pluginAlias": "Hilo",
	"pluginType": "platform",
	"singular": true,
	"customUi": true,
	"schema": {
		"type": "object",
		"properties": {
			"username": {
				"title": "Username",
				"type": "string",
				"required": true
			},
			"password": {
				"title": "Password",
				"type": "string",
				"required": true
			},
			"vendor": {
				"title": "Vendor",
				"type": "string",
				"default": "hilo",
				"oneOf": [
					{ "title": "Hilo", "enum": ["hilo"] },
					{ "title": "Allia by Stelpro", "enum": ["allia"] }
				],
				"required": true
			},
			"noChallengeSensor": {
				"title": "No Challenge Sensor",
				"type": "boolean",
				"default": false,
				"required": true
			},
			"plannedHours": {
				"title": "Trigger planned challenge sensor X hours before preheat phase",
				"type": "number",
				"default": 2,
				"minimum": 1,
				"maximum": 12,
				"required": false
			}
		}
	},
	"form": null,
	"display": null
}
